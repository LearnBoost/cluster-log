
@import 'vendor'
@import 'positions'

// colors

blue = #19B2E0
mid = #a7a7a7
light = #e5e5e5
dark = #4B4B4B
red = #c00

// mixins

border()
  border: 1px solid light

// styles

html
  border-top 5px solid light

body
  position: relative
  margin: 0
  padding: 50px
  font: 12px/1.4 'Helvetica Neue', Helvetica, Arial Geneva, sans-serif
  border-top: 1px solid darken(light, 10%)
  color: mid

h1, h2, h3
  font-smoothing: antialiased
  margin: 10px 0
  color: dark

h2
  padding-bottom: 10px
  border-bottom: 1px solid light

a
  text-decoration: none
  color: dark

// items table

table#items
  width: 100%
  margin-top: 50px
  border-collapse: collapse
  thead
    tr th
      padding: 10px 10px 10px 0
      text-align: right
      color: dark
    tr.actions
      a
        padding: 3px 6px
        border: 1px solid light
        box-shadow: 0 1px 1px 1px light + 15
        transition: box-shadow 0.2s
        &:hover
          color: dark + 50%
          box-shadow: 0 0 5px 1px rgba(blue, 0.5), 0 1px 1px 1px blue
        &:active
        &.active
          box-shadow: 0 1px 2px 0 blue
        &:first-child
          border-radius: 3px 0 0 3px
        &:last-child
          border-radius: 0 3px 3px 0
  tbody
    tr
      border-bottom: 1px solid #eee
      &:last-child
        border-bottom: none
      td
        border-right: 1px solid #eee
        padding 4px 15px
        text-align: right
        &:first-child
        &:nth-child(2)
          width: 50px
        &:last-child
          border-right: none
    tr.exception
      td:nth-child(2)
        color: red